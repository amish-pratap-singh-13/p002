{
  "manifest_version": 3,
  "name": "Job Skimmer",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "scripting", "tabs"],
  "host_permissions": [
    "https://wellfound.com/*",
    "https://www.linkedin.com/*",
    "https://www.naukri.com/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://wellfound.com/jobs*",
        "https://www.linkedin.com/jobs/*",
        "https://www.naukri.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
